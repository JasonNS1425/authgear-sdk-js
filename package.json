{
  "private": true,
  "workspaces": [
    "packages/authgear-core",
    "packages/authgear-web",
    "packages/authgear-react-native"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "format": "prettier --write --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"packages/*/src/**/*.{js.jsx,ts,tsx}\"",
    "bundle:iife": "rollup --config --configBundleType iife",
    "bundle:web-cjs": "rollup --config --configBundleType web-cjs",
    "bundle:web-module": "rollup --config --configBundleType web-module",
    "bundle:react-native": "rollup --config --configBundleType react-native",
    "bundle": "npm run bundle:iife && npm run bundle:web-cjs && npm run bundle:web-module && npm run bundle:react-native",
    "dts": "tsc --emitDeclarationOnly && node scripts/dts.js && npm run clean-decl",
    "clean-decl": "rimraf \"packages/*/src/*.d.ts\" \"packages/*/src/!(@types)/**/*.d.ts\" \"packages/*/src/*.d.ts.map\" \"packages/*/src/!(@types)/**/*.d.ts.map\"",
    "clean": "npm run clean-decl && rimraf temp \"packages/*/dist\" \"packages/*/index.d.ts\"",
    "build": "npm run clean && npm run bundle && npm run dts"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.2",
    "@babel/plugin-transform-modules-commonjs": "7.18.2",
    "@babel/plugin-transform-runtime": "7.18.2",
    "@babel/plugin-transform-typescript": "7.18.1",
    "@babel/preset-env": "7.18.2",
    "@babel/runtime": "7.18.2",
    "@microsoft/api-extractor": "7.24.1",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@types/jest": "27.5.1",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "builtins": "5.0.1",
    "eslint": "7.32.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rollup": "2.74.1",
    "typedoc": "0.22.15",
    "typedoc-plugin-markdown": "3.12.1",
    "typescript": "4.6.4"
  }
}
